{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Debug Client (React + Vite)",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/client/src"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Server (Node.js)",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/server/index.js"
    }
  ]
}
